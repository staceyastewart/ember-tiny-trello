{{#each model as |list|}}
  <div class="col-md-3">
    <div class="panel panel-default text-center">
      <span class="border-top-0">
        {{user-list title=list.title items=list.items}}
        {{input value=item placeholder="Add New Item to List"}}
        <input type="submit" id ="add-button" value="Add Item" {{action 'newItem' list.id}}/>
      </span>
    </div>
  </div>
{{/each}}
<div class="col-md-3">
  <div class="panel panel-default text-center">
    <span class="border-top-0">
      {{input value=text enter="newList" placeholder="Add New List"}}
    </span>
  </div>
</div>
