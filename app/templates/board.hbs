{{#each model as |list|}}
  <div class="col-md-3">
    <div class="panel panel-default text-center">
      <span class="border-top-0">
        {{user-list title=list.title items=list.items listId=list.id newItem="newItem"}}
      </span>
    </div>
  </div>
{{/each}}
<div class="col-md-3">
  <div class="panel panel-default text-center">
    <span class="border-top-0">
      {{input value=text enter="newList" placeholder="Add New List"}}
    </span>
  </div>
</div>


<span {{action "addInput"}}>
  {{#link-to "board"}}
    Click Me
  {{/link-to}}
</span>
